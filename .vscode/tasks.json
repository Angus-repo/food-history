{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run BDD Tests",
			"type": "shell",
			"command": "mvn",
			"args": [
				"test",
				"-Dtest=RunCucumberTest"
			],
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": []
		},
		{
			"label": "Open BDD Test Report",
			"type": "shell",
			"command": "open",
			"args": [
				"target/cucumber-reports/cucumber.html"
			],
			"problemMatcher": [],
			"presentation": {
				"reveal": "silent"
			}
		},
		{
			"label": "Run BDD Tests and Open Report",
			"dependsOrder": "sequence",
			"dependsOn": [
				"Run BDD Tests",
				"Open BDD Test Report"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"problemMatcher": []
		}
	]
}